#!/usr/bin/env bash
# Manages the program called manage_my_process

# Define the PID file path
PID_FILE="/var/run/my_process.pid"

# Check the number of arguments
if [ $# -ne 1 ]; then
    echo "Usage: $0 {start|stop|restart}"
    exit 1
fi

# Function to start the process
start_process() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running with PID $(cat $PID_FILE)."
    else
        nohup ./manage_my_process > /dev/null 2>&1 &
        echo $! > "$PID_FILE"
        echo "manage_my_process started."
    fi
}

# Function to stop the process
stop_process() {
    if [ -f "$PID_FILE" ]; then
        pid=$(cat "$PID_FILE")
        kill "$pid"
        rm -f "$PID_FILE"
        echo "manage_my_process stopped."
    else
        echo "manage_my_process is not running."
    fi
}

# Perform actions based on the argument
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        stop_process
        start_process
        echo "manage_my_process restarted."
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac
